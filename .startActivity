#!/bin/bash

# Sync from Git if needed
if [[ $GITSYNC == "true" ]]; then
    $WD/.gitpull &
fi

clear

echo "What are you doing?"
ls $PROJECTS/$1
read activity
if [[ $activity == "" ]]; then
    echo "You must enter a valid activity name."
    sleep 2s
    $WD/.startActivity $1
    exit
fi

START=$(date +%s)

echo "$activity" > $ACTIVE
echo "$1" >> $ACTIVE
echo "$START" >> $ACTIVE

echo "$activity@$1 started @$(date --date="@$START")"
