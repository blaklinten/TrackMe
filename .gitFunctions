#!/bin/bash

gitPull()
{
	pushd "$CLIENTS" &> /dev/null
	git pull &> /dev/null
	popd &> /dev/null
}

gitPush()
{
	ACTIVITY="$1"
	PROJECT="$2"

	pushd "$CLIENTS" &> /dev/null
	git add . &> /dev/null
	git commit -m "Time entry for $ACTIVITY, $PROJECT" &> /dev/null
	git push &> /dev/null
	popd &> /dev/null
}
