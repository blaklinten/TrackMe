#!/bin/bash

if [[ -f $ACTIVE ]]; then
    echo "A timer is already running, exiting..."
    exit
fi

clear
cat $WD/.choices
ls $PROJECTS
read choice
case $choice in
    "")
        echo "Please enter a valid project!"
        sleep 1s
        $WD/.chooseProject
        ;;
    "q")
        ;;
    "n")
        $WD/.createProject
        ;;
    *)
        $WD/.startActivity $choice
        ;;
esac
