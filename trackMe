#!/bin/bash

#########################################################
# This is a script that helps me keep track of my time. #
#########################################################

# Clear screen 

clear

# Check if env is ok,
# if not, fix it!

if [ ! -d $HOME/TrackMe/Projects ]; then
    mkdir -p $HOME/TrackMe/Projects
    echo "Creating working env..."
fi

export WD=$PWD
export PROJECTS=$HOME/TrackMe/Projects
export ACTIVE=$HOME/TrackMe/active

# Real time loop.

case $1 in
    "start")
        $WD/.chooseProject
        ;;
    "stop")
        $WD/.stopActivity
        ;;
    "status")
        $WD/.timerStatus
        ;;
esac
