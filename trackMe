#!/bin/bash

#########################################################
# This is a script that helps me keep track of my time. #
#########################################################

# Clear screen 

clear

export WD=$PWD
export TRACKME=$HOME/TrackMe
export PROJECTS=$TRACKME/Projects
export ACTIVE=$TRACKME/active

# Check if env is ok,
# if not, fix it!

if [ ! -d $PROJECTS ]; then
    mkdir -p $PROJECTS
    echo "Creating working env..."
fi


# Real time loop.

case $1 in
    "start")
        $WD/.chooseProject
        ;;
    "stop")
        $WD/.stopActivity
        ;;
    "status")
        $WD/.timerStatus
        ;;
    "config")
        $WD/.configure
        ;;
esac
