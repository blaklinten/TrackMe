#!/bin/bash

#########################################################
# This is a script that helps me keep track of my time. #
#########################################################

# Clear screen 

clear

# Check if env is ok,
# if not, fix it!

source configure

# Real time loop.

case $1 in
    "start")
        $WD/.chooseProject
        ;;
    "stop")
        $WD/.stopActivity
        ;;
    "status")
        $WD/.timerStatus
        ;;
    *)
        cat $WD/.man
        ;;
esac
