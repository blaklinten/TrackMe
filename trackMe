#!/bin/bash

#########################################################
# This is a script that helps me keep track of my time. #
#########################################################


# To fix quiet pushd & popd

pushd () {
    command pushd "$@" > /dev/null
}
popd () {
    command popd "$@" > /dev/null
}

# Clear screen 

clear

# Check if env is ok,
# if not, fix it!

if [ ! -d Projects ]; then
    mkdir $PWD/Projects
    echo "Creating working env..."
fi

export WD=$PWD
export PROJECTS=$WD/Projects

# Real time loop.

case $1 in
    "start")
        $WD/.chooseProject
        ;;
    "stop")
        $WD/.stopActivity
        ;;
    "status")
        $WD/.timerStatus
        ;;
esac
