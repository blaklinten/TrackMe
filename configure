#!/bin/bash

# These are the configuration options
# for the TrackMe script
#
# Use git sync yes/no
export GITSYNC=no
#
###### TODO ######
# Fix info if    #
# git is not     #
# available      #
##################

# Export enviroment variables
export WD=$HOME/Git/TrackMe
export CLIENTS=$HOME/.trackme
export ACTIVE=$CLIENTS/active
#
# Check if project destination is ok
# if not, fix it
if [[ ! -d "$CLIENTS" ]]; then
    mkdir -p "$CLIENTS"
    echo "Creating working env..."
fi
